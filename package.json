{
  "name": "easyrest",
  "version": "2.0.1",
  "author": "chenh",
  "description": "(Api Testing Tool) Desktop application for requesting restful api.",
  "main": "./dist/compile/main/index.js",
  "scripts": {
    "dev:view": "vite",
    "dev:main": "tsc -p ./src/main/tsconfig.json && electron .",
    "build:view": "tsc -p ./src/view/tsconfig.json && vite build",
    "build:main": "tsc -p ./src/main/tsconfig.json && electron-builder",
    "build": "npm run build:view && npm run build:main"
  },
  "dependencies": {
    "@emotion/css": "^11.9.0",
    "axios": "^0.27.2",
    "json5": "^2.2.1",
    "localforage": "^1.10.0",
    "nanoid": "^4.0.0",
    "react": "^18.0.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^18.0.0",
    "react-icons": "^4.4.0",
    "react-router-dom": "^6.3.0",
    "react-sortablejs": "^6.1.4",
    "sortablejs": "^1.15.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-copy-to-clipboard": "^5.0.2",
    "@types/react-dom": "^18.0.0",
    "@types/sortablejs": "^1.13.0",
    "@vitejs/plugin-react": "^1.3.0",
    "electron": "^19.0.6",
    "electron-builder": "^23.1.0",
    "typescript": "^4.6.3",
    "vite": "^2.9.9"
  },
  "build": {
    "appId": "tech.chenh.easyrest",
    "productName": "EasyRest",
    "directories": {
      "output": "./dist/app"
    },
    "win": {
      "icon": "./logo.png",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
