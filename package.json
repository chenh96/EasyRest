{
  "name": "easyrest",
  "version": "0.1.1",
  "author": "chenh",
  "description": "(Api Testing Tool) Desktop application for requesting restful api.",
  "main": "./out/compile/index.js",
  "dependencies": {
    "@emotion/css": "^11.9.0",
    "axios": "^0.27.2",
    "copy-to-clipboard": "^3.3.1",
    "date-fns": "^2.28.0",
    "json5": "^2.2.1",
    "localforage": "^1.10.0",
    "nanoid": "^3.3.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-router-dom": "^6.3.0",
    "react-sortablejs": "^6.1.1",
    "sortablejs": "^1.15.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@types/react-router-dom": "^5.3.3",
    "@types/sortablejs": "^1.13.0",
    "@vitejs/plugin-react": "^1.3.2",
    "electron": "^19.0.1",
    "electron-builder": "^23.0.3",
    "typescript": "^4.7.2",
    "vite": "^2.9.9"
  },
  "scripts": {
    "dev:view": "vite",
    "dev:main": "tsc -p ./src/main/tsconfig.json && electron ./",
    "build:view": "tsc -p ./src/view/tsconfig.json && vite build",
    "build:main": "tsc -p ./src/main/tsconfig.json && electron-builder",
    "build": "npm run build:view && npm run build:main"
  },
  "build": {
    "appId": "tech.chenh.easyrest",
    "productName": "EasyRest",
    "directories": {
      "output": "./out/app"
    },
    "win": {
      "icon": "./logo.png",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
