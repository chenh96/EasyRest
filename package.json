{
  "name": "easyrest",
  "version": "0.0.3",
  "main": "./out/compile/index.js",
  "dependencies": {
    "@emotion/css": "^11.5.0",
    "axios": "^0.24.0",
    "date-fns": "^2.25.0",
    "localforage": "^1.10.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-router-dom": "^5.3.0",
    "react-sortablejs": "^6.0.0",
    "sortablejs": "^1.14.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.3.2",
    "@types/sortablejs": "^1.10.7",
    "@vitejs/plugin-react": "^1.0.0",
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1",
    "typescript": "^4.3.2",
    "vite": "^2.6.4"
  },
  "scripts": {
    "dev:view": "vite",
    "dev:main": "tsc -p ./src/main/tsconfig.json && electron ./",
    "build:view": "tsc -p ./src/view/tsconfig.json && vite build",
    "build:main": "tsc -p ./src/main/tsconfig.json && electron-builder",
    "build": "npm run build:view && npm run build:main"
  },
  "build": {
    "appId": "tech.chenh.easyrest",
    "productName": "EasyRest",
    "directories": {
      "output": "./out/app"
    },
    "win": {
      "icon": "./logo.png",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
